<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite40"
    android:paddingLeft="@dimen/padding_item_history"
    android:paddingRight="@dimen/padding_item_history"
    android:paddingBottom="@dimen/padding_item_history"
    android:paddingTop="@dimen/padding_item_history">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/colorWhite"
        android:text="" />

    <ImageView
        android:id="@+id/img_gesture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:maxWidth="30dp"
        android:maxHeight="30dp"
        android:layout_below="@+id/txt_title"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_gesture"
        android:textColor="@color/colorWhite"
        android:text=""
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/gestures_margin_start" />

</RelativeLayout>