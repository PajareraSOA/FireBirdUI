<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/padding_top_main"
tools:context="com.loscache.firebirdone.gui.MainActivity"
android:background="@drawable/background">

    <ImageView
        android:id="@+id/main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/title"
        android:paddingTop="@dimen/padding_top_main"
        android:paddingBottom="@dimen/padding_top_main"/>

    <Button
        android:id="@+id/btn_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/molde"
        android:text="Conectarse"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/main_title"
        android:layout_centerHorizontal="true"

        />

    <ListView
        android:id="@+id/devices_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn_connection"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/initial_margin_top"
        android:divider="@null"
        android:dividerHeight="@dimen/space_between_items"
        android:paddingLeft="@dimen/margin_list_history"
        android:paddingRight="@dimen/margin_list_history"
        android:layout_marginBottom="@dimen/margin_bottom_history"
        />

</RelativeLayout>
